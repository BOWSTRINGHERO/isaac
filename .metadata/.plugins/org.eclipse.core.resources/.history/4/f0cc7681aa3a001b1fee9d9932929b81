package character;

import javax.swing.JFrame;

import SpriteSheet.SpriteSheet;
import objectSize.IsaacSize;
import objectSize.WormSize;

public class Worm extends Character {
	
	private Worm worm = this;
	private final static String GUBUN = "Worm : ";
	
	private SpriteSheet ssBody;

	public Worm(JFrame app) {
		super(app);
		ssBody = new SpriteSheet("monster/worm.png", "Worm", 0, 0, WormSize.UDWIDTH, WormSize.UDHEIGHT);

		setXChar(180);
		setYChar(430);	
		setLife(6);
		setAttackDamge(1);
		ssBody.drawObject(getXChar(), getYChar());
		getApp().add(ssBody, 0);
	}
	@Override
	public void moveRight() {
		
	}
	@Override
	public void moveLeft() {
		
	}
	@Override
	public void moveUp() {
		
	}
	@Override
	public void moveDown() {
		
	}
}
