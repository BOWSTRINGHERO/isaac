package monster;

import javax.swing.JFrame;

import SpriteSheet.SpriteSheet;
import character.Character;
import character.Isaac;
import objectSize.WormSize;

public class Monster extends Character{
	private final static String TAG = "Monster : ";
	
	private Isaac isaac;
	private SpriteSheet monster;
	private boolean moveStart = false;
	private boolean isAttacking = false;
	private int imgWidth, imgHeight;

	public Monster(JFrame app, Isaac isaac, String url, int imgWidth, int imgHeight) {
		super(app);
		this.isaac = isaac;
		this.imgWidth = imgWidth;
		this.imgHeight = imgHeight;
		monster = new SpriteSheet(url, "monster", 0, 0, imgWidth, imgHeight);
	}

}
